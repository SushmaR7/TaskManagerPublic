@model TaskManagerApp.Models.UserDetail;
@{
    ViewData["Title"] = "LoginView";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1>Login</h1>
<table style="width:100%;height:100%">
    <tr>
        <td>
            <div class="col-md-4">
                <form asp-action="LoginView">
                    <div class="form-group">
                        <label asp-for="Email" style="color:white" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" style="color:white" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordHash" style="color:white" class="control-label">Password</label>
                        <input type="password" asp-for="PasswordHash" class="form-control" required />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="padding-top:10px">
                        <input type="submit" value="Login" class="btn btn-primary" asp-page-handler="Submit" />
                    </div>
                    <div>
                        <a class="btn btn-link" style="padding-left:0px" asp-action="Create" asp-controller="UserDetails">Register</a>
                    </div>
                </form>
            </div>
        </td>
        <td>
            <div>
                <h2>The Task Manager Application</h2>
                <p>Keep track of your task using this application</p>
                <p>Register and login to manage your tasks</p>
            </div>
        </td>
    </tr>
</table>




